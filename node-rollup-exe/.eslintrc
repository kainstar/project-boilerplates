{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module"
  },
  "rules": {
    "no-var": "error",
    "indent": ["error", 2],
    "semi": ["error", "never"],
    "quotes": ["error", "single"]
  }
}
