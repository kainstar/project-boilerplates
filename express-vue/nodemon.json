{
  "restartable": "rs",
  "ignore": [
    ".git",
    "node_modules/**/node_modules",
    "src",
    "build",
    "config",
    "static"
  ],
  "verbose": true,
  "execMap": {
    "js": "node --harmony"
  },
  "env": {
    "NODE_ENV": "development",
    "SERVER_PORT": 3000
  },
  "ext": "js json"
}
