{
  "root": true,
  "env": {
    "browser": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module"
  },
  "extends": "eslint:recommended",
  "rules": {
    "indent": ["error", 2],
    "quotes": ["error", "single"],
    "semi": ["error", "never"],
    "no-var": "error",
    "no-new-object": "error",
    "no-array-constructor": "error",
    "no-empty": "error",
    "no-empty-function": "error",
    "no-inner-declarations": "error",
    "no-func-assign": "error",
    "no-console": "off",
    "eqeqeq": "error"
  }
}
